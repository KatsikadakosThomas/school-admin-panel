<!DOCTYPE html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <h1><%= title %></h1>

      <div id="message"><%= message %></div>
      <table>
        <tr>
          <th >ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Subject</th>
          <th></th>
          <th></th>
        </tr>
        <% 
     
        for(var i = 0; i < trainers.length; i++){ %>
        <tr>
          <td><%= trainers[i].trainer_id %></td>
          <%console.log(trainers[i].trainer_id)%>
          <td><%= trainers[i].first_name %></td>
          <td><%= trainers[i].last_name %></td>
          <td><%= trainers[i].subject %></td>
          <td><a href="<%= url + '/edit/' + trainers[i].trainer_id %>"> <button>Edit</button></a></td>
          <td><button onclick="deleteEntry('<%= url %>' + '/delete/' + '<%= trainers[i].trainer_id %>')"> Delete</button></td>
        </tr>
        <% }; %>
      </table>
      <a class="button-links" href="<%= url + '/add/' %>" ><button class="button" type="button" >Add new trainer</button></a>
      <a class="button-links" href="<%= home %>" > <button class="button" type="button" >Home</button></a>
      
      <script>
        function deleteEntry(url) {
          var dialog = confirm("Hold your horses cowboy are you sure?");
          if(dialog) {
            window.location.replace(url);
          } else alert("Think about it.. no worries no rush");
        }
      </script>
</body>
</html>