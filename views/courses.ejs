<!DOCTYPE html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <h1><%= title %></h1>
    <div id="message"><%= message %></div>
      <table>
        <tr>
          <th >ID</th>
          <th>Title</th>
          <th>Stream</th>
          <th>Type</th>
          <th>starting Date</th>
          <th>ending Date</th>
          <th></th>
          <th></th>
          
        </tr>
        <% 
        var options = {
          weekday: "short",
          year: "numeric",
          month: "2-digit",
           day: "numeric"
                  };

        for(var i = 0; i < courses.length; i++){ %>
        <tr>
          <td><%= courses[i].courses_id %></td>
          <td><%= courses[i].title %></td>
          <td><%= courses[i].stream %></td>
          <td><%= courses[i].type %></td>
          <td><%= new Intl.DateTimeFormat().format(courses[i].start_date) %></td>
          <td><%= new Intl.DateTimeFormat().format(courses[i].end_date) %></td>
          <td><a href="<%= 'https://school-app-tomka.herokuapp.com/' + '/edit/' + courses[i].courses_id %>"> <button>Edit</button></a></td>
          <td><button onclick="deleteEntry('<%= url %>' + '/delete/' + '<%= courses[i].courses_id %>')"> Delete</button></td>
        </tr>
        <% }; %>
      </table>
      <a class="button-links" href="https://school-app-tomka.herokuapp.com/courses/add/" ><button class="button" type="button" >Add new course</button></a>
      <a class="button-links" href="https://school-app-tomka.herokuapp.com/" > <button class="button" type="button" >Home</button></a>


      <script>
        function deleteEntry(url) {
          var dialog = confirm("Hold your horses cowboy are you sure?");
          if(dialog) {
            window.location.replace(url);
          } else alert("Think about it.. no worries no rush");
        }
      </script>
</body>
</html>


